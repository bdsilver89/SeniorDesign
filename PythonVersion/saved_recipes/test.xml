<recipeml version="0.5">
	<recipe>
		<head>
			<title>My First Recipe</title>
			<description>This is the first recipe we released for use with AutoSpice. Please enjoy it!</description>
		</head>
		<ingredients>
			<ing>
				<amt>
					<qty>1</qty>
					<unit>teaspoon</unit>
				</amt>
				<item>garlic powder</item>
			</ing>
			<ing>
				<amt>
					<qty>1</qty>
					<unit>tablespoons</unit>
				</amt>
				<item>salt</item>
			</ing>
			<ing>
				<amt>
					<qty>4</qty>
					<unit>pounds</unit>
				</amt>
				<item>chili powder</item>
			</ing>
		</ingredients>
		<directions>
			<step>Combine salt and garlic powder in a bowl</step>
			<step>Sprinkle with chili powder</step>
			<step>Garnish with pepper</step>
		</directions>
	</recipe>
</recipeml>

