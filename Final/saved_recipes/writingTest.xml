<recipeml version="0.5">
	<recipe>
		<head>
			<title>thing</title>
		</head>
		<ingredients>
			<ing>
				<amt>
					<qty>1.3</qty>
					<unit>pounds</unit>
				</amt>
				<item>salt</item>
			</ing>
			<ing>
				<amt>
					<qty>1</qty>
					<unit>tablespoon</unit>
				</amt>
				<item>garlic powder</item>
			</ing>
			<ing>
				<amt>
					<qty>23</qty>
					<unit>ounces</unit>
				</amt>
				<item>thyme flowers</item>
			</ing>
			<ing>
				<amt>
					<qty>3.5</qty>
					<unit>grams</unit>
				</amt>
				<item>bbq seasoning</item>
			</ing>
		</ingredients>
		<directions>
			<step>Combine salt and garlic powder</step>
			<step>Sprinkle the bbq seasoning over</step>
			<step>Coat chicken with mixture</step>
			<step>Grill for 3 minutes on each side</step>
			<step>Garnish with thyme flowers</step>
		</directions>
	</recipe>
